{
  "name": "histre-highlight-only",
  "displayName": "Histre highlight only",
  "version": "0.1.0",
  "description": "Save highlighted text using Histre API",
  "dependencies": {
    "@types/node": "^18.0.6",
    "@types/webextension-polyfill": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "unplugin-auto-import": "^0.9.3",
    "vite": "^3.0.0",
    "webextension-polyfill": "^0.9.0"
  },
  "scripts": {
    "dev": "run-p dev:*",
    "dev:pre": "bun run ./scripts/manifest.ts",
    "dev:js": "vite build --config ./vite.config.content.ts --mode development",
    "dev:web": "vite build --clearScreen=false --mode development",
    "start:firefox": "web-ext run --source-dir ./extension --target=firefox-desktop -u 'about:devtools-toolbox?id=addon%40histre-highlight-only.com&type=extension'"
  }
}
